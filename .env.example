# Pinterest Scraper Configuration

# Scraping Settings
# Comma-separated list of categories to scrape, or "ALL" for everything
CATEGORIES=ALL
# Alternative: CATEGORIES=STUDY/ACADEMIA,FOOD/COOKING,BOOKS/READING

# Number of pins to collect per topic (max 500 recommended)
MAX_PINS_PER_TOPIC=100

# Output folder for downloaded content
OUTPUT_FOLDER=pinterest_downloads

# Whether to download images (true/false)
DOWNLOAD_IMAGES=true

# Browser Settings
HEADLESS=true
TIMEOUT_MS=45000

# Proxy (optional, leave empty if not needed)
# PROXY=http://user:pass@ip:port
PROXY=

# NSFW Detection
# Enable image-based NSFW detection using AI
USE_NSFW_DETECTOR=false
# NSFW threshold (0.0-1.0, higher = more strict)
NSFW_THRESHOLD=0.7

# Concurrency
# Number of topics to process in parallel
MAX_CONCURRENT_TOPICS=3
# Number of concurrent image downloads
MAX_CONCURRENT_DOWNLOADS=10

# Logging
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Google Drive Upload
# Enable automatic upload to Google Drive after scraping (true/false)
ENABLE_DRIVE_UPLOAD=false
# Google Drive folder URL (the folder where content will be uploaded)
# Example: https://drive.google.com/drive/folders/1C9WuerzHjYkV5gka6EsB1p9_1bRlAPZy
DRIVE_FOLDER_URL=
